---
/**
 * SEOHead Component
 * Enhanced Open Graph and Twitter meta tags
 * Includes site_name, article tags, twitter:creator
 */

import { SITE_CONFIG } from '../../config';

interface Props {
	title: string;
	description: string;
	image?: string;
	type?: 'website' | 'article';
	publishDate?: Date;
	tags?: string[];
	twitterHandle?: string;
}

const {
	title,
	description,
	image = 'og-image.png',
	type = 'website',
	publishDate,
	tags = [],
	twitterHandle = '@sekoudoumbouya'
} = Astro.props;

const base = import.meta.env.BASE_URL === '/' ? '' : import.meta.env.BASE_URL.replace(/\/$/, '');
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(`${base}/${image.replace(/^\//, '')}`, Astro.site);
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png" />
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
<meta name="generator" content={Astro.generator} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- RSS Feed -->
<link rel="alternate" type="application/rss+xml" title="RSS Feed" href={new URL(`${base}/rss.xml`, Astro.site)} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={socialImageURL} />
<meta property="og:site_name" content={SITE_CONFIG.name} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={socialImageURL} />
{twitterHandle && (
	<meta property="twitter:creator" content={twitterHandle} />
)}

<!-- Article Specific -->
{type === 'article' && publishDate && (
	<meta property="article:published_time" content={publishDate.toISOString()} />
)}
{type === 'article' && tags.length > 0 && tags.map(tag => (
	<meta property="article:tag" content={tag} />
))}
