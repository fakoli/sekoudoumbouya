---
interface Props {
	value: string;
	label: string;
	context?: string;
}

const { value, label, context } = Astro.props;
---

<div class="impact-metric">
	<div class="impact-metric-value">{value}</div>
	<div class="impact-metric-label">{label}</div>
	{context && <div class="impact-metric-context">{context}</div>}
</div>
