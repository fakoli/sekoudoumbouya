---
/**
 * Site footer component - 3-column layout
 */
import { SITE_CONFIG, SOCIAL_LINKS, NAV_LINKS, RESUME_PATH } from '../../config';
import { withBasePath } from '../../utils/paths';
import LinkedInIcon from '../icons/LinkedInIcon.astro';
import GitHubIcon from '../icons/GitHubIcon.astro';
---

<footer class="border-t border-[var(--border-default)] mt-16 bg-[var(--color-surface)]">
	<div class="container mx-auto px-4 py-12">
		<!-- Main Footer Content -->
		<div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
			<!-- Navigation -->
			<div>
				<h3 class="label mb-4">Navigation</h3>
				<ul class="space-y-2">
					{NAV_LINKS.map((link) => (
						<li>
							<a
								href={withBasePath(link.href)}
								class="body-sm text-secondary hover:text-foreground transition-colors"
							>
								{link.label}
							</a>
						</li>
					))}
				</ul>
			</div>

			<!-- Connect -->
			<div>
				<h3 class="label mb-4">Connect</h3>
				<ul class="space-y-2">
					<li>
						<a
							href={SOCIAL_LINKS.linkedin}
							target="_blank"
							rel="noopener noreferrer"
							class="inline-flex items-center gap-2 body-sm text-secondary hover:text-foreground transition-colors"
						>
							<LinkedInIcon class="w-4 h-4" />
							LinkedIn
						</a>
					</li>
					<li>
						<a
							href={SOCIAL_LINKS.github}
							target="_blank"
							rel="noopener noreferrer"
							class="inline-flex items-center gap-2 body-sm text-secondary hover:text-foreground transition-colors"
						>
							<GitHubIcon class="w-4 h-4" />
							GitHub
						</a>
					</li>
					<li>
						<a
							href={SOCIAL_LINKS.email}
							class="inline-flex items-center gap-2 body-sm text-secondary hover:text-foreground transition-colors"
						>
							<svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
								<path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
							</svg>
							Email
						</a>
					</li>
				</ul>
			</div>

			<!-- Resources -->
			<div>
				<h3 class="label mb-4">Resources</h3>
				<ul class="space-y-2">
					<li>
						<a
							href={withBasePath(RESUME_PATH)}
							target="_blank"
							rel="noopener noreferrer"
							class="inline-flex items-center gap-2 body-sm text-secondary hover:text-foreground transition-colors"
						>
							<svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
								<path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
							</svg>
							Resume
						</a>
					</li>
					<li>
						<a
							href={withBasePath('/rss.xml')}
							class="inline-flex items-center gap-2 body-sm text-secondary hover:text-foreground transition-colors"
						>
							<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
								<path d="M6.18 15.64a2.18 2.18 0 1 1 0 4.36 2.18 2.18 0 0 1 0-4.36m12.18 4.36a14.36 14.36 0 0 0-14.36-14.36V9a11 11 0 0 1 11 11h3.36m-6.72 0a7.64 7.64 0 0 0-7.64-7.64v3.36a4.28 4.28 0 0 1 4.28 4.28h3.36z"/>
							</svg>
							RSS Feed
						</a>
					</li>
					<li>
						<a
							href="https://aiwithfriends.com"
							target="_blank"
							rel="noopener noreferrer"
							class="inline-flex items-center gap-2 body-sm text-secondary hover:text-foreground transition-colors"
						>
							<svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
								<path stroke-linecap="round" stroke-linejoin="round" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />
							</svg>
							AI with Friends Podcast
						</a>
					</li>
				</ul>
			</div>
		</div>

		<!-- Bottom Bar -->
		<div class="pt-8 border-t border-[var(--border-subtle)] flex flex-col md:flex-row justify-between items-center gap-4 text-center md:text-left">
			<p class="body-sm text-muted">
				&copy; {new Date().getFullYear()} {SITE_CONFIG.name}. All rights reserved.
			</p>
			<p class="body-sm text-faint italic">
				Building bridges between bytes.
			</p>
		</div>
	</div>
</footer>
