---
// Animated Cloud Architecture Graphic for Hero Section
// Represents network nodes, cloud infrastructure, and data flow
---

<div class="hero-graphic-container">
  <svg
    viewBox="0 0 800 600"
    class="hero-graphic"
    xmlns="http://www.w3.org/2000/svg"
    aria-hidden="true"
  >
    <defs>
      <!-- Gradient definitions -->
      <linearGradient id="nodeGradient" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" style="stop-color:#3b82f6;stop-opacity:1" />
        <stop offset="100%" style="stop-color:#8b5cf6;stop-opacity:1" />
      </linearGradient>

      <linearGradient id="lineGradient" x1="0%" y1="0%" x2="100%" y2="0%">
        <stop offset="0%" style="stop-color:#3b82f6;stop-opacity:0.3" />
        <stop offset="50%" style="stop-color:#8b5cf6;stop-opacity:0.6" />
        <stop offset="100%" style="stop-color:#3b82f6;stop-opacity:0.3" />
      </linearGradient>

      <linearGradient id="glowGradient" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" style="stop-color:#3b82f6;stop-opacity:0.4" />
        <stop offset="100%" style="stop-color:#8b5cf6;stop-opacity:0.1" />
      </linearGradient>

      <filter id="glow">
        <feGaussianBlur stdDeviation="3" result="coloredBlur"/>
        <feMerge>
          <feMergeNode in="coloredBlur"/>
          <feMergeNode in="SourceGraphic"/>
        </feMerge>
      </filter>

      <filter id="softGlow">
        <feGaussianBlur stdDeviation="8" result="coloredBlur"/>
        <feMerge>
          <feMergeNode in="coloredBlur"/>
          <feMergeNode in="SourceGraphic"/>
        </feMerge>
      </filter>
    </defs>

    <!-- Background glow orbs -->
    <circle cx="200" cy="150" r="120" fill="url(#glowGradient)" class="glow-orb glow-orb-1" />
    <circle cx="600" cy="400" r="150" fill="url(#glowGradient)" class="glow-orb glow-orb-2" />
    <circle cx="400" cy="300" r="100" fill="url(#glowGradient)" class="glow-orb glow-orb-3" />

    <!-- Connection lines (data flow) -->
    <g class="connection-lines">
      <!-- Main network backbone -->
      <path d="M100,300 Q250,200 400,300 T700,300" stroke="url(#lineGradient)" stroke-width="2" fill="none" class="data-flow" />
      <path d="M150,450 Q300,350 450,400 T650,350" stroke="url(#lineGradient)" stroke-width="1.5" fill="none" class="data-flow delay-1" />
      <path d="M200,150 Q350,250 500,180 T700,220" stroke="url(#lineGradient)" stroke-width="1.5" fill="none" class="data-flow delay-2" />

      <!-- Cross connections -->
      <line x1="250" y1="200" x2="400" y2="350" stroke="#3b82f6" stroke-width="1" opacity="0.3" class="pulse-line" />
      <line x1="400" y1="250" x2="550" y2="380" stroke="#8b5cf6" stroke-width="1" opacity="0.3" class="pulse-line delay-1" />
      <line x1="300" y1="400" x2="500" y2="280" stroke="#3b82f6" stroke-width="1" opacity="0.3" class="pulse-line delay-2" />
    </g>

    <!-- Cloud regions -->
    <g class="cloud-regions">
      <!-- Region 1: Primary -->
      <g class="region region-primary" transform="translate(150, 180)">
        <rect x="0" y="0" width="120" height="80" rx="12" fill="white" stroke="#e5e7eb" stroke-width="2" class="region-box" />
        <rect x="10" y="10" width="25" height="18" rx="3" fill="#3b82f6" opacity="0.2" />
        <rect x="10" y="35" width="45" height="8" rx="2" fill="#e5e7eb" />
        <rect x="10" y="50" width="35" height="8" rx="2" fill="#e5e7eb" />
        <circle cx="95" cy="25" r="8" fill="#22c55e" class="status-dot" />
        <text x="60" y="65" font-size="8" fill="#6b7280" font-family="Inter, sans-serif">us-west-2</text>
      </g>

      <!-- Region 2: Secondary -->
      <g class="region region-secondary" transform="translate(500, 140)">
        <rect x="0" y="0" width="120" height="80" rx="12" fill="white" stroke="#e5e7eb" stroke-width="2" class="region-box" />
        <rect x="10" y="10" width="25" height="18" rx="3" fill="#8b5cf6" opacity="0.2" />
        <rect x="10" y="35" width="50" height="8" rx="2" fill="#e5e7eb" />
        <rect x="10" y="50" width="40" height="8" rx="2" fill="#e5e7eb" />
        <circle cx="95" cy="25" r="8" fill="#22c55e" class="status-dot delay-1" />
        <text x="60" y="65" font-size="8" fill="#6b7280" font-family="Inter, sans-serif">eu-west-1</text>
      </g>

      <!-- Region 3: Tertiary -->
      <g class="region region-tertiary" transform="translate(330, 350)">
        <rect x="0" y="0" width="120" height="80" rx="12" fill="white" stroke="#e5e7eb" stroke-width="2" class="region-box" />
        <rect x="10" y="10" width="25" height="18" rx="3" fill="#f59e0b" opacity="0.2" />
        <rect x="10" y="35" width="55" height="8" rx="2" fill="#e5e7eb" />
        <rect x="10" y="50" width="30" height="8" rx="2" fill="#e5e7eb" />
        <circle cx="95" cy="25" r="8" fill="#22c55e" class="status-dot delay-2" />
        <text x="60" y="65" font-size="8" fill="#6b7280" font-family="Inter, sans-serif">ap-south-1</text>
      </g>
    </g>

    <!-- Network nodes (servers/services) -->
    <g class="network-nodes" filter="url(#glow)">
      <circle cx="100" cy="300" r="12" fill="url(#nodeGradient)" class="node node-1" />
      <circle cx="250" cy="200" r="10" fill="url(#nodeGradient)" class="node node-2" />
      <circle cx="400" cy="300" r="14" fill="url(#nodeGradient)" class="node node-3" />
      <circle cx="550" cy="250" r="10" fill="url(#nodeGradient)" class="node node-4" />
      <circle cx="700" cy="300" r="12" fill="url(#nodeGradient)" class="node node-5" />
      <circle cx="300" cy="420" r="8" fill="url(#nodeGradient)" class="node node-6" />
      <circle cx="500" cy="380" r="10" fill="url(#nodeGradient)" class="node node-7" />
      <circle cx="650" cy="420" r="8" fill="url(#nodeGradient)" class="node node-8" />
    </g>

    <!-- Data packets (animated) -->
    <g class="data-packets">
      <circle r="4" fill="#3b82f6" class="packet packet-1">
        <animateMotion dur="3s" repeatCount="indefinite" path="M100,300 Q250,200 400,300 T700,300" />
      </circle>
      <circle r="3" fill="#8b5cf6" class="packet packet-2">
        <animateMotion dur="4s" repeatCount="indefinite" path="M150,450 Q300,350 450,400 T650,350" begin="1s" />
      </circle>
      <circle r="3.5" fill="#06b6d4" class="packet packet-3">
        <animateMotion dur="3.5s" repeatCount="indefinite" path="M200,150 Q350,250 500,180 T700,220" begin="0.5s" />
      </circle>
    </g>

    <!-- Floating tech icons -->
    <g class="tech-icons">
      <!-- Kubernetes wheel -->
      <g transform="translate(680, 120)" class="float-icon float-1">
        <circle cx="0" cy="0" r="20" fill="white" stroke="#326ce5" stroke-width="2" />
        <path d="M0,-12 L0,12 M-10.4,-6 L10.4,6 M-10.4,6 L10.4,-6" stroke="#326ce5" stroke-width="2" />
        <circle cx="0" cy="0" r="4" fill="#326ce5" />
      </g>

      <!-- Cloud icon -->
      <g transform="translate(80, 180)" class="float-icon float-2">
        <path d="M-15,5 A12,12 0 1,1 15,5 A8,8 0 0,1 15,5 A10,10 0 1,1 -15,5" fill="white" stroke="#3b82f6" stroke-width="2" />
      </g>

      <!-- Database cylinder -->
      <g transform="translate(720, 450)" class="float-icon float-3">
        <ellipse cx="0" cy="-10" rx="15" ry="6" fill="white" stroke="#8b5cf6" stroke-width="2" />
        <rect x="-15" y="-10" width="30" height="20" fill="white" stroke="none" />
        <line x1="-15" y1="-10" x2="-15" y2="10" stroke="#8b5cf6" stroke-width="2" />
        <line x1="15" y1="-10" x2="15" y2="10" stroke="#8b5cf6" stroke-width="2" />
        <ellipse cx="0" cy="10" rx="15" ry="6" fill="white" stroke="#8b5cf6" stroke-width="2" />
      </g>
    </g>

    <!-- Metrics/Stats floating cards -->
    <g class="metrics-cards">
      <g transform="translate(60, 380)" class="metric-card metric-1">
        <rect x="0" y="0" width="90" height="50" rx="8" fill="white" stroke="#e5e7eb" stroke-width="1" />
        <text x="10" y="20" font-size="9" fill="#6b7280" font-family="Inter, sans-serif">Latency</text>
        <text x="10" y="38" font-size="14" font-weight="bold" fill="#3b82f6" font-family="Inter, sans-serif">12ms</text>
        <path d="M55,35 L62,28 L69,32 L76,22" stroke="#22c55e" stroke-width="2" fill="none" />
      </g>

      <g transform="translate(650, 520)" class="metric-card metric-2">
        <rect x="0" y="0" width="100" height="50" rx="8" fill="white" stroke="#e5e7eb" stroke-width="1" />
        <text x="10" y="20" font-size="9" fill="#6b7280" font-family="Inter, sans-serif">Uptime</text>
        <text x="10" y="38" font-size="14" font-weight="bold" fill="#22c55e" font-family="Inter, sans-serif">99.99%</text>
      </g>
    </g>
  </svg>
</div>

<style>
  .hero-graphic-container {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: 400px;
  }

  .hero-graphic {
    width: 100%;
    height: 100%;
    overflow: visible;
  }

  /* Glow orb animations */
  .glow-orb {
    animation: pulse-glow 4s ease-in-out infinite;
  }

  .glow-orb-1 { animation-delay: 0s; }
  .glow-orb-2 { animation-delay: 1.5s; }
  .glow-orb-3 { animation-delay: 3s; }

  @keyframes pulse-glow {
    0%, 100% { opacity: 0.3; transform: scale(1); }
    50% { opacity: 0.6; transform: scale(1.1); }
  }

  /* Data flow animation */
  .data-flow {
    stroke-dasharray: 10 5;
    animation: flow 2s linear infinite;
  }

  .data-flow.delay-1 { animation-delay: 0.5s; }
  .data-flow.delay-2 { animation-delay: 1s; }

  @keyframes flow {
    0% { stroke-dashoffset: 0; }
    100% { stroke-dashoffset: -30; }
  }

  /* Pulse line animation */
  .pulse-line {
    animation: pulse-opacity 2s ease-in-out infinite;
  }

  .pulse-line.delay-1 { animation-delay: 0.7s; }
  .pulse-line.delay-2 { animation-delay: 1.4s; }

  @keyframes pulse-opacity {
    0%, 100% { opacity: 0.2; }
    50% { opacity: 0.6; }
  }

  /* Node animations */
  .node {
    animation: node-pulse 3s ease-in-out infinite;
  }

  .node-1 { animation-delay: 0s; }
  .node-2 { animation-delay: 0.4s; }
  .node-3 { animation-delay: 0.8s; }
  .node-4 { animation-delay: 1.2s; }
  .node-5 { animation-delay: 1.6s; }
  .node-6 { animation-delay: 2s; }
  .node-7 { animation-delay: 2.4s; }
  .node-8 { animation-delay: 2.8s; }

  @keyframes node-pulse {
    0%, 100% { transform: scale(1); opacity: 0.9; }
    50% { transform: scale(1.15); opacity: 1; }
  }

  /* Status dot animation */
  .status-dot {
    animation: blink 2s ease-in-out infinite;
  }

  .status-dot.delay-1 { animation-delay: 0.5s; }
  .status-dot.delay-2 { animation-delay: 1s; }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  /* Region box hover effect */
  .region-box {
    transition: all 0.3s ease;
  }

  .region:hover .region-box {
    stroke: #3b82f6;
    filter: drop-shadow(0 4px 12px rgba(59, 130, 246, 0.15));
  }

  /* Floating icons */
  .float-icon {
    animation: float 6s ease-in-out infinite;
  }

  .float-1 { animation-delay: 0s; }
  .float-2 { animation-delay: 2s; }
  .float-3 { animation-delay: 4s; }

  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }

  /* Metric cards */
  .metric-card {
    animation: fade-float 5s ease-in-out infinite;
  }

  .metric-1 { animation-delay: 0s; }
  .metric-2 { animation-delay: 2.5s; }

  @keyframes fade-float {
    0%, 100% { opacity: 0.9; transform: translateY(0); }
    50% { opacity: 1; transform: translateY(-5px); }
  }

  /* Packet glow */
  .packet {
    filter: url(#glow);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .hero-graphic-container {
      min-height: 300px;
    }

    .metrics-cards,
    .tech-icons {
      opacity: 0.5;
    }
  }
</style>
