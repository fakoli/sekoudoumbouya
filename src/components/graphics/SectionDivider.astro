---
// Decorative section divider with various styles
interface Props {
  variant?: 'wave' | 'angle' | 'curve' | 'dots';
  flip?: boolean;
  color?: string;
}

const { variant = 'wave', flip = false, color = '#f9fafb' } = Astro.props;
---

<div class:list={['section-divider', { 'section-divider--flip': flip }]} aria-hidden="true">
  {variant === 'wave' && (
    <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none">
      <path
        d="M0 60C240 120 480 0 720 60C960 120 1200 0 1440 60V120H0V60Z"
        fill={color}
      />
    </svg>
  )}

  {variant === 'angle' && (
    <svg viewBox="0 0 1440 80" fill="none" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none">
      <path d="M0 80L1440 0V80H0Z" fill={color} />
    </svg>
  )}

  {variant === 'curve' && (
    <svg viewBox="0 0 1440 100" fill="none" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none">
      <path
        d="M0 100C360 20 720 20 1080 60C1260 80 1380 90 1440 100V100H0V100Z"
        fill={color}
      />
      <path
        d="M0 100C360 40 720 40 1080 70C1260 85 1380 95 1440 100V100H0V100Z"
        fill={color}
        opacity="0.5"
      />
    </svg>
  )}

  {variant === 'dots' && (
    <div class="dots-divider">
      <span class="dot"></span>
      <span class="dot"></span>
      <span class="dot"></span>
    </div>
  )}
</div>

<style>
  .section-divider {
    width: 100%;
    line-height: 0;
    overflow: hidden;
  }

  .section-divider svg {
    width: 100%;
    height: 60px;
    display: block;
  }

  .section-divider--flip {
    transform: scaleY(-1);
  }

  .dots-divider {
    display: flex;
    justify-content: center;
    gap: 0.75rem;
    padding: 2rem 0;
  }

  .dot {
    width: 8px;
    height: 8px;
    background: linear-gradient(135deg, #3b82f6, #8b5cf6);
    border-radius: 50%;
    opacity: 0.6;
  }

  .dot:nth-child(2) {
    opacity: 0.8;
    width: 10px;
    height: 10px;
  }

  @media (min-width: 768px) {
    .section-divider svg {
      height: 80px;
    }
  }
</style>
