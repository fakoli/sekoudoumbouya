---
interface Props {
	title: string;
	description: string;
	icon?: string;
}

const { title, description, icon = "‚óè" } = Astro.props;
---

<div class="card p-5">
	<div class="flex items-start gap-3">
		<span class="w-8 h-8 rounded-md bg-[var(--color-accent-bg)] text-accent flex items-center justify-center text-sm shrink-0 mt-0.5">
