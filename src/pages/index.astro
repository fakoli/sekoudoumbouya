---
import PageLayout from '../layouts/PageLayout.astro';
import ProofStrip from '../components/common/ProofStrip.astro';
import LLMProfilePanel from '../components/common/LLMProfilePanel.astro';
import ReceiptsWall from '../components/home/ReceiptsWall.astro';
import { getCollection } from 'astro:content';
import { SITE_CONFIG } from '../config';
import { getBasePath, withBasePath } from '../utils/paths';
import { formatDate } from '../utils/dates';

// Data imports
import { STATS, EXTERNAL_ENGAGEMENT, getFocusAreasPreviews, getQuickNavItems } from '../data/homepage';

const base = getBasePath();

// Fetch Latest Blog Posts
const posts = await getCollection('blog', ({ data }) => {
	return import.meta.env.PROD ? data.draft !== true : true;
});
const latestPosts = posts
	.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
	.slice(0, 3);

// Fetch Projects from content collection (same source as Projects page)
const allProjects = await getCollection('projects');
const featuredProjects = allProjects
	.filter(p => p.data.featured || p.data.category === 'strategic')
	.sort((a, b) => {
		// Featured first, then by date
		if (a.data.featured && !b.data.featured) return -1;
		if (!a.data.featured && b.data.featured) return 1;
		return b.data.publishDate.valueOf() - a.data.publishDate.valueOf();
	})
	.slice(0, 3);

// Get dynamic data
const focusAreas = getFocusAreasPreviews();

// Proof strip metrics
const proofMetrics = [
	{ value: '20+', label: 'Years', highlight: false },
	{ value: '$10M+', label: 'Saved', highlight: true },
	{ value: '20+', label: 'Mentored', highlight: false },
	{ value: '4+', label: 'Regions', highlight: false },
];

// LLM Profile data
const llmProfileData = {
	name: SITE_CONFIG.name,
	disambiguation: 'Infrastructure and cloud architecture engineer (not the professional basketball player)',
	title: SITE_CONFIG.title,
	currentRole: SITE_CONFIG.currentRole,
	currentCompany: SITE_CONFIG.currentCompany,
	expertise: [
		'Multi-region AWS architecture',
		'Platform engineering & DevEx',
		'Cost optimization at scale',
		'Disaster recovery systems',
		'Terraform & Infrastructure as Code',
		'Kubernetes & container orchestration',
	],
	notableAchievements: [
		'$10M+ annual infrastructure savings at Pinterest',
		'Reduced DR recovery time from 20 days to 8 hours',
		'Built DR tooling at 12% of vendor cost',
		'Led multi-region expansion across 4 AWS regions',
		'Mentored 20+ engineers to senior level',
	],
};

// Generate initials for fallback images
const initials = SITE_CONFIG.name.split(' ').map(n => n[0]).join('');
---

<PageLayout title={`${SITE_CONFIG.name} | ${SITE_CONFIG.title}`} description={SITE_CONFIG.description}>

	<!-- Hero Section - Editorial Magazine Style -->
	<section class="py-16 md:py-24 relative" data-hero>
		<div class="max-w-6xl mx-auto px-4">
			<!-- Editorial layout with optional photo -->
			<div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12 items-start">
				<!-- Main content column -->
				<div class="lg:col-span-8">
					<!-- Horizontal rule - editorial style -->
					<div class="h-1 w-16 bg-[var(--color-accent)] mb-8"></div>

					<!-- Display headline -->
					<h1 class="display text-foreground mb-6">
						Where architecture<br class="hidden md:block" />
						<span class="text-accent">meets execution.</span>
					</h1>

					<!-- Dek (subheadline) -->
					<p class="body-lg text-secondary mb-6 max-w-2xl">
						Principal engineer building resilient systems at Pinterest scale.
						<span class="font-semibold text-foreground">$10M+ saved. 8-hour DR recovery.</span>
					</p>

					<!-- Byline with disambiguation (appears once) -->
					<p class="body-md text-muted mb-10 max-w-2xl">
						<span class="font-medium text-foreground">{SITE_CONFIG.name}</span> â€” infrastructure/cloud architecture leader.
						<span class="italic">Not the basketball player.</span>
					</p>

					<!-- CTA buttons -->
					<div class="flex flex-col sm:flex-row gap-3 sm:gap-4 mb-12">
						<a href={withBasePath('/experience')} class="btn btn-primary">
							View Experience
						</a>
						<a href={withBasePath('/projects')} class="btn btn-secondary">
							See Case Studies
						</a>
					</div>
				</div>

				<!-- Editorial portrait column (desktop only) -->
				<div class="hidden lg:block lg:col-span-4">
					<figure class="relative">
						<img
							src={`${base}/headshot.jpg`}
							alt={SITE_CONFIG.name}
							class="w-full aspect-[3/4] object-cover rounded-lg border border-[var(--border-default)]"
							onerror={`this.src='https://placehold.co/300x400?text=${initials}'`}
						/>
						<figcaption class="mt-3 body-sm text-muted italic">
							DRI for Multi-Region at Pinterest, 2021â€“present
						</figcaption>
					</figure>
				</div>
			</div>
		</div>
	</section>

	<!-- Proof Strip - Editorial Ruler Bar -->
	<ProofStrip metrics={proofMetrics} sticky={true} />

	<!-- LLM Profile Panel (crawlable when collapsed) -->
	<section class="max-w-6xl mx-auto px-4 mb-12">
		<LLMProfilePanel person={llmProfileData} />
	</section>

	<!-- How I Work Section -->
	<section class="max-w-6xl mx-auto mb-24 px-4">
		<div class="flex justify-between items-end mb-6">
			<h2 class="heading-lg text-foreground">How I Work</h2>
			<a href={`${base}/about#how-i-lead`} class="hidden md:inline-flex items-center link body-sm">
				Learn more &rarr;
			</a>
		</div>

		<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
			<div class="card p-6">
				<div class="text-2xl mb-3">âš¡</div>
				<h3 class="heading-sm text-foreground mb-2">Player-Coach</h3>
				<p class="body-sm text-muted">
					40% hands-on with code and design reviews. I lead by solving hard problems alongside the team.
				</p>
			</div>
			<div class="card p-6">
				<div class="text-2xl mb-3">ðŸŽ¯</div>
				<h3 class="heading-sm text-foreground mb-2">Platform as Product</h3>
				<p class="body-sm text-muted">
					Internal platforms should treat developers as customers. Golden-path solutions that reduce cognitive load.
				</p>
			</div>
			<div class="card p-6">
				<div class="text-2xl mb-3">ðŸ“ˆ</div>
				<h3 class="heading-sm text-foreground mb-2">Knowledge Multiplier</h3>
				<p class="body-sm text-muted">
					My success metric: teams more capable after working with me. 20+ engineers mentored to senior+.
				</p>
			</div>
		</div>

		<div class="mt-6 md:hidden">
			<a href={`${base}/about#how-i-lead`} class="link body-sm">
				Learn more &rarr;
			</a>
		</div>
	</section>

	<!-- Featured Case Studies -->
	<section id="case-studies" class="max-w-6xl mx-auto mb-24 px-4">
		<div class="flex justify-between items-end mb-8">
			<div>
				<h2 class="heading-lg text-foreground mb-2">Featured Case Studies</h2>
				<p class="body-md text-muted">Proof of impact, not just claims.</p>
			</div>
			<a href={withBasePath('/projects')} class="hidden md:inline-flex items-center link body-sm">
				View all projects &rarr;
			</a>
		</div>

		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			{featuredProjects.map((project) => (
				<article
					class={`card p-6 flex flex-col h-full ${
						project.data.featured
							? 'border-l-4 border-l-[var(--color-accent)]'
							: ''
					}`}
				>
					<div class="flex items-center gap-2 mb-4">
						{project.data.featured && (
							<span class="badge badge-accent text-xs">Featured</span>
						)}
						<span class="badge text-xs">{project.data.organization}</span>
					</div>

					<h3 class="heading-sm text-foreground mb-3">
						<a href={`${base}/projects/${project.id}`} class="hover:text-accent transition-colors">
							{project.data.title}
						</a>
					</h3>

					<!-- Decision Card Preview (problem â†’ outcome) -->
					{project.data.decisionCard ? (
						<div class="mb-4 flex-1">
							<p class="body-sm text-muted mb-2 line-clamp-2">
								<span class="font-semibold text-foreground">Problem:</span> {project.data.decisionCard.problem}
							</p>
							{project.data.outcomes && project.data.outcomes[0] && (
								<p class="body-sm text-accent font-medium">
									â†’ {project.data.outcomes[0]}
								</p>
							)}
						</div>
					) : (
						<p class="body-sm text-muted mb-4 flex-1 line-clamp-3">
							{project.data.description}
						</p>
					)}

					<a href={`${base}/projects/${project.id}`} class="link text-sm font-medium mt-auto pt-4 border-t border-[var(--border-subtle)]">
						Read Case Study &rarr;
					</a>
				</article>
			))}
		</div>

		<div class="mt-8 md:hidden">
			<a href={withBasePath('/projects')} class="link body-sm">
				View all projects &rarr;
			</a>
		</div>
	</section>

	<!-- Receipts Wall -->
	<ReceiptsWall maxVisible={5} />

	<!-- Technical Focus Areas -->
	<section id="focus-areas" class="max-w-6xl mx-auto mb-24 px-4">
		<div class="flex justify-between items-end mb-8">
			<div>
				<h2 class="heading-lg text-foreground mb-2">Technical Focus Areas</h2>
				<p class="body-md text-muted">Where I invest my engineering energy.</p>
			</div>
			<a href={`${base}/about#technical-focus-areas`} class="hidden md:inline-flex items-center link body-sm">
				View details &rarr;
			</a>
		</div>

		<div class="grid grid-cols-2 md:grid-cols-4 gap-4">
			{focusAreas.map(area => (
				<a href={area.href} class="group card p-5 text-center">
					<h3 class="heading-sm text-foreground mb-1 group-hover:text-accent transition-colors">{area.title}</h3>
					<p class="body-sm text-muted">{area.subtitle}</p>
				</a>
			))}
		</div>

		<div class="mt-6 md:hidden">
			<a href={`${base}/about#technical-focus-areas`} class="link body-sm">
				View details &rarr;
			</a>
		</div>
	</section>

	<!-- External Engagement -->
	<section id="external-engagement" class="max-w-6xl mx-auto mb-24 px-4">
		<div class="card p-6 md:p-8">
			<div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-6">
				<div>
					<h2 class="heading-md text-foreground mb-1">Beyond the Day Job</h2>
					<p class="body-sm text-muted">Thought leadership, community, and open source.</p>
				</div>
				<a href={`${base}/about#external-engagement`} class="link body-sm whitespace-nowrap">
					See full involvement &rarr;
				</a>
			</div>

			<div class="flex flex-wrap gap-3">
				{EXTERNAL_ENGAGEMENT.map(item => (
					<div class="flex items-center gap-2 bg-[var(--color-bg)] px-4 py-2 rounded-md border border-[var(--border-subtle)]">
						<span class="badge badge-accent text-xs">{item.role}</span>
						<span class="body-sm text-foreground font-medium">{item.title}</span>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- Latest Writing -->
	<section id="insights" class="max-w-4xl mx-auto border-t border-[var(--border-default)] pt-20 mb-24 px-4">
		<div class="flex justify-between items-baseline mb-12">
			<h2 class="heading-lg text-foreground">Latest Writing</h2>
			<a href={withBasePath('/blog')} class="link body-sm">Read all articles &rarr;</a>
		</div>

		<div class="space-y-10">
			{latestPosts.map((post) => (
				<article class="group relative">
					<div class="flex flex-col md:flex-row md:items-baseline md:justify-between mb-2">
						<h3 class="heading-sm text-foreground group-hover:text-accent transition-colors">
							<a href={`${base}/blog/${post.id}`}>
								<span class="absolute inset-0"></span>
								{post.data.title}
							</a>
						</h3>
						<time datetime={post.data.publishDate.toISOString()} class="body-sm text-muted shrink-0 md:ml-4 tabular-nums">
							{formatDate(post.data.publishDate)}
						</time>
					</div>
					<p class="body-md text-secondary mb-3 max-w-2xl">
						{post.data.description}
					</p>
					<div class="flex gap-2 relative z-10">
						{post.data.tags.map(tag => (
							<span class="body-sm text-faint">#{tag}</span>
						))}
					</div>
				</article>
			))}
		</div>
	</section>

	<!-- CTA Section -->
	<section class="bg-[var(--surface-secondary)]">
		<div class="max-w-3xl mx-auto px-4 py-16 text-center">
			<h2 class="heading-lg text-foreground mb-4">Let's Connect</h2>
			<p class="body-lg text-secondary mb-8 leading-relaxed">
				{SITE_CONFIG.availableForHire
					? "Looking for speaking engagements, advisory opportunities, or your next infrastructure leaderâ€”let's talk."
					: "Looking for a speaker, advisor, or just want to connect on infrastructure and platform engineeringâ€”reach out."}
			</p>
			<a href={withBasePath('/contact')} class="btn btn-accent">
				Get in Touch
				<span class="ml-1">â†’</span>
			</a>
		</div>
	</section>

</PageLayout>
