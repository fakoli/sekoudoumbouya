---
import PageLayout from '../../layouts/PageLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog', ({ data }) => {
	return import.meta.env.PROD ? data.draft !== true : true;
});
const sortedPosts = posts.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());

function formatDate(date: Date) {
	return date.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' });
}

const base = import.meta.env.BASE_URL === '/' ? '' : import.meta.env.BASE_URL.replace(/\/$/, '');
---

<PageLayout title="Blog | Sekou Doumbouya" description="Thoughts on cloud infrastructure, engineering leadership, and technology.">
        <section class="max-w-3xl mx-auto">
                <h1 class="text-4xl font-bold mb-12 text-text">Technical Insights</h1>

                <p class="text-muted mb-10">Selected essays on systems design, infrastructure leadership, and AI workloads.</p>

                <div class="space-y-8">
			{sortedPosts.map((post) => (
				<article class="group">
					<a href={`${base}/blog/${post.id}`} class="block">
						<div class="flex flex-col md:flex-row md:items-baseline md:justify-between mb-2">
                                                        <h2 class="text-2xl font-bold text-text group-hover:text-accent transition-colors">
                                                                {post.data.title}
                                                        </h2>
                                                        <time datetime={post.data.publishDate.toISOString()} class="text-sm text-muted shrink-0 md:ml-4">
                                                                {formatDate(post.data.publishDate)}
                                                        </time>
                                                </div>
                                                <p class="text-muted mb-3">
                                                        {post.data.description}
                                                </p>
                                                <div class="flex gap-2">
                                                        {post.data.tags.map(tag => (
                                                                <span class="text-xs text-muted">#{tag}</span>
                                                        ))}
                                                </div>
                                        </a>
                                </article>
			))}
		</div>
	</section>
</PageLayout>
