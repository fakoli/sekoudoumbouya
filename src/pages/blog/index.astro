---
import PageLayout from '../../layouts/PageLayout.astro';
import { getCollection } from 'astro:content';
import { getBasePath } from '../../utils/paths';
import { formatDate } from '../../utils/dates';

const posts = await getCollection('blog', ({ data }) => {
	return import.meta.env.PROD ? data.draft !== true : true;
});
const sortedPosts = posts.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());
const base = getBasePath();
---

<PageLayout title="Blog | Sekou Doumbouya" description="Thoughts on cloud infrastructure, engineering leadership, and technology.">
	<section class="max-w-3xl mx-auto">
		<h1 class="heading-xl text-foreground mb-6">Technical Insights</h1>
		<p class="body-lg text-secondary mb-10">
			Selected essays on systems design, infrastructure leadership, and AI workloads.
		</p>

		<div class="space-y-8">
			{sortedPosts.map((post) => (
				<article class="group card p-6">
					<a href={`${base}/blog/${post.id}`} class="block">
						<div class="flex flex-col md:flex-row md:items-baseline md:justify-between mb-2">
							<h2 class="heading-sm text-foreground group-hover:text-accent transition-colors">
								{post.data.title}
							</h2>
							<time datetime={post.data.publishDate.toISOString()} class="body-sm text-muted shrink-0 md:ml-4 tabular-nums">
								{formatDate(post.data.publishDate)}
							</time>
						</div>
						<p class="body-md text-secondary mb-3">
							{post.data.description}
						</p>
						<div class="flex gap-2">
							{post.data.tags.map(tag => (
								<span class="body-sm text-muted">#{tag}</span>
							))}
						</div>
					</a>
				</article>
			))}
		</div>
	</section>
</PageLayout>
