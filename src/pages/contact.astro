---
import PageLayout from '../layouts/PageLayout.astro';
import { SITE_CONFIG, SOCIAL_LINKS } from '../config';

const offerings = [
	...(SITE_CONFIG.availableForHire ? ["Principal / Staff+ infrastructure and platform roles"] : []),
	"Architecture and strategy advisory for multi-region, networking, and AI workloads",
	"Speaking, workshops, and internal education for engineering teams",
];
---

<PageLayout title="Contact | Sekou Doumbouya" description="Work with Sekou Doumbouya on infrastructure leadership, architecture advisory, and speaking engagements.">
	<section class="max-w-3xl mx-auto px-4 py-12">
		<h1 class="heading-xl text-foreground mb-8">Work With Me</h1>

		<p class="body-lg text-secondary mb-8 leading-relaxed">
			{SITE_CONFIG.availableForHire
				? "I'm open to principal-level infrastructure roles, advisory engagements, and select speaking or teaching opportunities focused on cloud architecture, multi-region design, networking, and AI infrastructure."
				: "I'm open to advisory engagements and select speaking or teaching opportunities focused on cloud architecture, multi-region design, networking, and AI infrastructure."
			}
		</p>

		<ul class="space-y-3 text-secondary mb-10">
			{offerings.map(item => (
				<li class="flex items-start">
					<span class="mr-3 text-accent mt-1">‚óè</span>
					<span class="body-md">{item}</span>
				</li>
			))}
		</ul>

		<div class="card p-6 space-y-4">
			<h2 class="heading-sm text-foreground">Get in Touch</h2>
			<p class="body-md text-secondary">The best way to reach me is by email or through LinkedIn.</p>
			<div class="space-y-2">
				<p class="body-md">
					<span class="text-muted">Email:</span>{' '}
					<a href={SOCIAL_LINKS.email} class="link">{SITE_CONFIG.email}</a>
				</p>
				<p class="body-md">
					<span class="text-muted">LinkedIn:</span>{' '}
					<a href={SOCIAL_LINKS.linkedin} target="_blank" rel="noopener noreferrer" class="link">Connect on LinkedIn</a>
				</p>
			</div>
		</div>
	</section>
</PageLayout>
