			<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
				{competencyGroups.map(group => (
					<div class="card p-6">
						<h3 class="heading-sm text-foreground mb-4">{group.title}</h3>
						<ul class="space-y-2">
							{group.skills.map(skill => (
								<li class="flex items-center space-x-3 text-secondary">
									<span class="w-2 h-2 bg-[var(--color-accent)] rounded-full shrink-0"></span>
									<span class="body-md">{skill}</span>
								</li>
							))}
						</ul>
					</div>
				))}
			</div>
		</div>

		<!-- Education & Development -->
		<div class="grid grid-cols-1 md:grid-cols-2 gap-12 mb-16">
